%%%% This is file 'CML_Seminar_Template.cls',%% the class-file for the seminars. It is based on article... and%% on a classfile developed by Christian 'Fips' Fremgen %% Author: Tom Gross%% Date of last Revision: 1999/11/23%%\NeedsTeXFormat{LaTeX2e}[1995/12/01]\ProvidesClass{CML_Seminar_Template}		[1999/11/23 2.0		 CML_Seminar_Template-Class by  Tom Gross.]\DeclareOption{a5paper}    {\ClassError{CML_Seminar_Template}{Option `a5paper' not supported}{}}\DeclareOption{b5paper}    {\ClassError{CML_Seminar_Template}{Option `b5paper' not supported}{}}\DeclareOption{letterpaper}    {\ClassError{CML_Seminar_Template}{Option `letterpaper' not supported}{}}\DeclareOption{legalpaper}    {\ClassError{CML_Seminar_Template}{Option `legalpaper' not supported}{}}\DeclareOption{executivepaper}    {\ClassError{CML_Seminar_Template}{Option `executivepaper' not supported}{}}\DeclareOption{landscape}    {\ClassError{CML_Seminar_Template}{Option `landscape' not supported}{}}\PassOptionsToClass{a4paper,12pt}{article}\DeclareOption*{\PassOptionsToClass{\CurrentOption}{article}}\ProcessOptions\LoadClass{article}\RequirePackage{graphics}\RequirePackage{natbib}		%get all the fancy citation stuff\usepackage{times}			%use times as default font\ExecuteOptions{a4paper,12pt,oneside,onecolumn,final}\ProcessOptions%%%% Set the textmargins \setlength{\textwidth}{150mm}\addtolength{\oddsidemargin}{-2mm}\addtolength{\evensidemargin}{-2mm}\addtolength{\topmargin}{-20mm}\setlength{\textheight}{237mm} \setlength{\parsep}{-1pt plus0pt minus0pt}\setlength{\partopsep}{-1pt plus0pt minus0pt}\setlength\parindent{5mm}\setlength\baselineskip{15pt}\sloppy%%%% Define font names; some are just for readability%% Note: 8 points as starting value are bigger than%% 8 points in word -- therefore, scale is taken 15% smaller%% (e.g., 3000 * 0,85 = 2550)%% Times roman with different sizes\newfont{\rmtwentyfour}{ptmr8r scaled 2550}\newfont{\rmeighteen}{ptmr8r scaled 1912}\newfont{\rmfourteen}{ptmr8r scaled 1487}\newfont{\rmtwelve}{ptmr8r scaled 1275} \newfont{\rmten}{ptmr8r scaled 1062}%% Times roman with bold or italic\newfont{\rmtwentyfourbf}{ptmb8r scaled 2550}\newfont{\rmeighteenbf}{ptmb8r scaled 1912}\newfont{\rmfourteenbf}{ptmb8r scaled 1487}\newfont{\rmtwelvebf}{ptmb8r scaled 1275}\newfont{\rmtenbf}{ptmb8r scaled 1062}\newfont{\rmtenit}{ptmri8r scaled 1062}%% Sans serif\newfont{\ssten}{phvr8t scaled 1062}\newfont{\sstenbf}{phvb8t scaled 1062}\newfont{\sseightsl}{phvro8t scaled 850}%%%% Redefine bibliography\renewcommand\refname{References}\bibpunct{[}{]}{;}{a}{~}{,}% \setlength\bibhang{5mm}\bibliographystyle{CML_Seminar_Template}\newcommand\mybibfont{\rmten\setlength\baselineskip{13pt}}\let\bibfont=\mybibfont%%%% Redefine maketitle (difficuly here is that we want%% two different fonts in one title)%% Parameter 1: main title; parameter 2: second title\renewcommand\maketitle[2]{  \begin{flushleft}    \vspace*{142pt}    %main title    {\rmtwentyfour #1}    \\[2pt]                 %second title    {\rmeighteen #2 \\[12pt]}  \end{flushleft}}%%%% Redefine author%% Just enter the parameters as you want; each goes into a separate line\renewcommand{\author}[4]{  \begin{flushleft}    {\rmfourteen #1}\\    {\rmtwelve #2\\#3\\#4}  \end{flushleft}  }%% %% Redefine abstract\renewenvironment{abstract}%               {\vspace{24pt}  			    \ssten  				\setlength\baselineskip{13pt}  				\mbox{{\sstenbf \abstractname .}\rightmargin 0pt \leftmargin 0pt}}  				{\endlist}%%%% Redefine heading 1; heading 2; heading 3\renewcommand\section{\@startsection {section}{1}{\z@}%                                   {-24pt \@plus -1ex \@minus -.2ex}%                                   {12pt \@plus 2ex}%                                   {\rmeighteen}}\renewcommand\subsection{\@startsection{subsection}{2}{\z@}%                                     {-18pt\@plus -1ex \@minus -.2ex}%                                     {9pt \@plus 2ex}%                                     {\rmfourteen}}\renewcommand\subsubsection{\@startsection{subsubsection}{3}{\z@}%                                     {-12pt \@plus -1ex \@minus -.2ex}%                                     {6pt \@plus 2ex}%                                     {\rmtwelve}}%% Redefine marker of second-level list (lines and numbers)\renewcommand{\labelitemii}{\labelitemi}\renewcommand{\labelenumi}{(\arabic{enumi})}%% %% Redefine quote\renewenvironment{quote}%               {\rmten                 \setlength\baselineskip{13pt}                \list{}{\rightmargin 0pt \leftmargin 5mm}%                \item\relax}               {\endlist}%%%% Redefine caption%% From article.cls (with modifications)\setlength{\abovecaptionskip}{12pt}\setlength{\belowcaptionskip}{12pt}\long\def\@makecaption#1#2{%  \rmten  \setlength\baselineskip{13pt}  \vspace\abovecaptionskip  \sbox\@tempboxa{#1. #2}%  \ifdim \wd\@tempboxa >\hsize    #1. #2\par  \else    \global \@minipagefalse    \hb@xt@\hsize{\hfil\box\@tempboxa\hfil}%  \fi  \vskip\belowcaptionskip}%% End from article.cls%% %% Define acknowledgements\newenvironment{acknowledgements}%               {\rmten                 \setlength\baselineskip{13pt}                \list{}{\rightmargin 0pt \leftmargin 0pt}%                \item\relax}               {\endlist}\def\@seminarpagenumber#1{\sseightsl --- \number #1 ---}\pagenumbering{seminarpagenumber}%%%% End of file 'CML_Seminar_Template.cls' ... *puuuh*.